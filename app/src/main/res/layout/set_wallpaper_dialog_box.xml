<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_350sdp"
        android:background="@drawable/rounded_linear_layout"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialogBoxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="SET WALLPAPER"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />


        />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setHome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/rounded_linear_layout"
            android:text="SET HOME SCREEN"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="normal"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setLock"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/rounded_linear_layout"
            android:text="SET LOCK SCREEN"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="normal"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setBoth"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/rounded_linear_layout"
            android:text="SET HOME + LOCK SCREEN"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="normal"

            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>